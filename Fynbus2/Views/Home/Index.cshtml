@{
    ViewBag.Title = "Login";
}

<h2>Log ind</h2>
<div id="loginForm">
    <form action="#" method="POST">
        <div>
            <input type="text" name="username" required />
        </div>
        <div>
            <input type="password" name="password" required />
        </div>
        <div>
            <input type="submit" value="Log ind" />
        </div>
    </form>
    <p>
        @Html.ActionLink("Opret bruger", "Signup")
    </p>
</div>
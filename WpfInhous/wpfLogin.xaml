<Window x:Class="WpfInhous.wpfLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wpfLogin" Height="200" Width="300" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
            <StackPanel>
                <Label Content="Bruger nave:" HorizontalAlignment="Right"/>
                <Label Content="Kode:" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel>
                <TextBox x:Name="txtAcc" Width="100" Margin="5"/>
                <PasswordBox x:Name="pasPass" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Grid.Column="1">
            <Button x:Name="btnOk" Content="ok" Width="50" Click="btnOk_Click"/>
        </Grid>
    </Grid>
</Window>
